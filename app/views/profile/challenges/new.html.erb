<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2 class="text-center">Create open challenge</h2><br/>
		<%= form_for [:profile, Challenge.new] do |f| %>
			<div class="form-group">
				<%= f.select :team_id, options_for_select(current_user.teams.map{ |c| [c.name, c.id] }), {include_blank: "Which team will you use?"}, {class: "form-control input-lg"} %>
			</div>
			<div class="input-group">
			  <span class="input-group-addon">$</span>
				<%= f.text_field :wager_amount, class: "form-control input-lg", placeholder: "Enter wager amount" %>
			</div><br>
			<div class="form-group">
				<%= f.submit class: "btn btn-primary btn-block" %>
			</div>
		<% end %>
	</div>
</div>