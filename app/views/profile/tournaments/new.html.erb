<div class="row gutter-100">
	<div class="col-md-7">
		<div class="new-header">
			<h2 class="text-center">Kick off your new tournament</h2>
		</div>
		<%= form_for [:profile, @tournament] do |f| %>
		<ul>
		<% @tournament.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
			<div class="form-group">
				<%= f.label :capacity, "How many teams can enroll?", class: "lb-lg" %>
				<%= f.select :capacity, options_for_team_enrolls, {}, prompt: 'Select One', class: "form-control input-lg selectpicker" %>
			</div>
			<div class="form-group">
				<%= f.label :team_size, "Members per team?", class: "lb-lg" %>
				<%= f.select :team_size, options_for_team_members, {}, prompt: 'Select One', class: "form-control input-lg selectpicker" %>
			</div>
			<div class="form-group">
				<%= f.label :bet_amount, "Bet amount per team member?", class: "lb-lg" %>
				<%= f.select :bet_amount, options_for_bet_amount, {}, prompt: 'Select One', class: "form-control input-lg selectpicker" %>
			</div>
			<div class="form-group form-gap">
				<%= f.label :venue_id, "Played at which venue?", class: "lb-lg" %>
				<%= f.select :venue_id, options_for_select(Venue.all.map{ |c| [c.name, c.id, {"data-subtext"=>"- #{c.address}"}] }), {}, class: "form-control input-lg selectpicker", title: "Choose sporting venue" %>
			</div>
			<div class="form-group form-gap">
					<%= f.label :date, "Choose weekend day", class: "lb-lg" %>
					<%= f.select :date, options_for_days, {}, prompt: 'Select One', class: "form-control input-lg selectpicker" %>
      </div>
			<div class="form-group">
				<%= f.label :time, "Around what time?", class: "lb-lg" %>
				<%= f.text_field :time, class: "timepicker form-control input-lg" %>
			</div>
      <div class="form-group">
				<%= f.label :team_color_id, "Choose your team color to enroll", class: "lb-lg"  %>
				<%= f.select :team_color_id, options_for_select(Color.all.map{ |c| [c.name, c.id] }), {}, class: "form-control input-lg selectpicker", title: "Choose team color" %>
      </div><br>
			<div class="form-group">
				<%= f.submit class: "btn btn-primary btn-block round" %>
			</div>
		<% end %>
	</div>
	<div class="col-md-5">
		<div class="tournament-info">
			<p><i class="fa fa-lightbulb-o" aria-hidden="true"></i></p>
			<section class="info">
				<p class="info-title">New tournament</p>
				<p>You can only start one tournament per week.
				</p>
			</section>
			<section class="info">
				<p class="info-title">Weekends</p>
				<p>All tournaments are played on weekends. You can enroll in a tournament for Saturday and/or Sunday, but never twice on the same day.</p>
			</section>
		</div>
	</div>
</div>
