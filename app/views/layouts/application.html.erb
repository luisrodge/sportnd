<!DOCTYPE html>
<html>
  <head>
    <!-- LOVE YOU UNCLE ZANE - ALWAYS. -->
    <title>sportnd - <%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://res.cloudinary.com/dwaavflqp/image/upload/v1497667217/basketball-32-184778_hokozo.png">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro|Roboto+Condensed" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="<%= controller_path %> <%= action_name %>">

    <%= render "header" %>

    <div class="container" id="main">
      <div class="row gutter-70">
        <div class="col-md-3">
          <%= render "side_nav" %>
        </div>
        <div class="col-md-9">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render "footer" %>

    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '416786855350356',
          xfbml      : true,
          version    : 'v2.8'
        });
        FB.AppEvents.logPageView();
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>

  </body>
</html>
