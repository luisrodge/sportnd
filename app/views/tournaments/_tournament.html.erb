<div class="tournament">
	<div class="box-shadow">
	<%= link_to tournament_path(tournament) do %>
			<div class="row tournament-address">
				<div class="col-md-12">
					<h5 class="pull-left"><%= tournament.venue.name + ", " + tournament.venue.address %></h5>
					<h5 class="pull-right"><%= tournament.sport.name %> Tournament  <% if tournament.full? %><span class="tournament-full">Full</span><% end %></h5>
				</div>
			</div>
			<div class="row gutter-60">
				<div class="col-md-4">
					<%= image_tag(tournament.venue.venue_image_url(:medium)) if tournament.venue.venue_image? %>
				</div>
				<div class="col-md-8">
					<div class="details-shadow">
						<h4><%= format_datetime(tournament.date, tournament.time) %></h4>
						<h4><%= teams_enrollment_status(tournament) %></h4>
						<div class="progress-container">
							<div class="progress">
								<div class="progress-bar" role="progressbar" aria-valuenow="<%= tournament.bet_amount_percentage %>"
											  aria-valuemin="0" aria-valuemax="100" style="width:<%= tournament.bet_amount_percentage %>">
								</div>
							</div>
							<h4>Betting total @ <%= money_format(tournament.current_bet_amount) %> of <%= money_format(tournament.total_bet_amount) %></h4>
						</div>
					</div>
					<div class="tournament-organized-by">
							<div class="row gutter-10">
								<div class="col-md-2">
									<%= profile_image(tournament.organizer) %>
								</div>
								<div class="col-md-10">
									<h4 class="gray-txt">Organized by <%= tournament.organizer.name %></h4>
								</div>
							</div>
					</div>
				</div>
			</div>
	<% end %>
</div>
</div>
