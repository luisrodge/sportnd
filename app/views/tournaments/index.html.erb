<div class="tournaments js-items-container">
	<%= render partial: 'tournaments/item', collection: @tournaments %>
</div>

<div class="pagination" data-pagination-endpoint="<%= @endpoint %>" data-pagination-pages="<%= @page_amount %>">
	<%= image_tag 'ajax-loader.gif' %>
</div>


<% content_for :sidebar do %>
	<% Team.order("created_at DESC").each do |team| %>
	    <div class="team">
	    	<p class="text-center"><%= image_tag(team.captain.profile_image_url(:small), class: "img-circle default profile-img") if team.captain.profile_image? %></p>
	     	 <h5 class="truncate text-center"><%= team.color %> Team</h5>
	     	 <h5 class="truncate text-center">Captain - <%= team.captain.username %></h5>
	     	 <h5 class="truncate text-center"><%= team.tournament.sport.name %> Tournament</h5>
	     	 <%= link_to "Join", join_profile_team_path(team), class: "btn btn-primary btn-xs btn-block" %>
	    </div>
	<% end %>
<% end %>
