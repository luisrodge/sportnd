<% if Tournament.upcoming.any? %>
	<div class="row search-form">
		<div class="col-md-12">
			<%= form_tag tournaments_path, method: :get do %>
				<div class="imaginary_container">
					<div class="input-group stylish-input-group">
						<%= text_field_tag :q, params[:q], class: "form-control", autocomplete: :off, placeholder: "Find tournaments by organizer, address or court name" %>
						<span class="input-group-addon">
							<button type="submit">
								<span class="glyphicon glyphicon-search"></span>
							</button>
						</span>
					</div>
				</div>
			<% end %>
		</div>
	</div>

	<div class="tournaments-this-weekend">
		<h4 class="gray-txt"><%= upcoming_tournaments_count(@tournaments) %></h4>
	</div>

	<div class="js-items-container">
		<%= render partial: 'tournaments/tournament', collection: @tournaments %>
	</div>
	<div class="row">
		<div class="col-md-1 center-block pagination" data-pagination-endpoint="<%= @endpoint %>" data-pagination-pages="<%= @page_amount %>">
			<%= image_tag 'ajax-loader.gif' %>
		</div>
	</div>
<% end %>
