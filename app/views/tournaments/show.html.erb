<div class="application-col">

<div class="row">
		<div class="col-md-12 header">
			<div class="organizer-details">
				<h3 class="text-center"><%= @tournament.sport.name %> tournament organized by <%= @tournament.organizer.full_name %></h3>
				<h4 class="text-center"><%= @tournament.venue.address %></h4>
				<p class="text-center"><%= image_tag(@tournament.organizer.profile_image_url(:small), class: "img-circle default profile-img") if @tournament.organizer.profile_image? %></p>
			</div>
			<div class="details text-center">
				<h4><%= format_datetime(@tournament.date, @tournament.time) %></h4>
				<h4>Open to <%= pluralize(@tournament.capacity, "team") %> with <%= pluralize(@tournament.team_size, "member") %> per team</h4>
				<h4>Betting entry at <%= number_to_currency(@tournament.bet_amount, :unit => "$") %> per team member</h4>
			</div>
			<div class="progress-container">
			  	<h4>Betting total currently at <%= money_format(@tournament.current_bet_amount) + "/" + money_format(@tournament.total_bet_amount) %></h4>
				<div class="progress">
				  <div class="progress-bar" role="progressbar" aria-valuenow="<%= @tournament.bet_amount_percentage %>"
				  aria-valuemin="0" aria-valuemax="100" style="width:<%= @tournament.bet_amount_percentage %>">
				  </div>
				</div>
			</div>
		</div>
</div>
<div class="row body gutter-60">
		<div class="col-md-5">
			<h3><%= @tournament.venue.name %></h3>
			<%= image_tag(@tournament.venue.venue_image_url(:medium)) if @tournament.venue.venue_image? %>
		</div>
		<div class="col-md-7">
			<% if !@tournament.enrolled?(current_user) && @tournament.enrollment_period? %>
				<h3>Enroll A New Team</h3>
				<h4><%= @tournament.remaining_capacity %> space remaining</h4>
				<%= form_for [:profile, @tournament, Team.new] do |f| %>
					<div class="form-group">
						<%= f.select :color_id, options_for_select(Color.where.not(id: @tournament.teams.select(:color_id)).map{ |c| [c.name, c.id] }), {:include_blank => 'Select a team color'}, class: "form-control input-lg" %>
					</div>
						<%= f.submit "Enroll", class: "btn btn-primary btn-block round" %>
				<% end %>
				<h5>NOTE: It is recommended that what you wear has some ressemblance of the color you choose. For example, if you choose red then try to wear a red shirt or pants for the day of the tournament.</h5>
			<% else %>
				<div class="row enrolled-team">
					<div class="col-md-12 header">
						<h3>Enrolled With <%= current_user.team_for_tournament(@tournament).color.name %> Team</h3>
						<%= link_to "Leave Team", leave_profile_team_path(current_user.team_for_tournament(@tournament)), method: :delete, class: "btn btn-danger btn-xs round" %>
						<%= leave_btn(@tournament, current_user.team_for_tournament(@tournament)) %>
					</div>
					<% current_user.team_for_tournament(@tournament).users.each do |user| %>
						<div class="col-md-3">
							<%= image_tag(user.profile_image_url(:normal), class: "img-circle") if user.profile_image? %>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
</div>
<div class="enrolled-teams">
	<div class="row">
		<div class="col-md-12">
			<h3>Teams Enrolled</h3>
		</div>
	</div>
	<div class="row">
		<% @tournament.teams.each do |team| %>
			<div class="col-md-3">
				<div class="text-center"><i class="fa fa-circle <%= team.color.name.downcase %>"></i></div>
				<% if @tournament.organizer == current_user %>
					<%= link_to profile_team_path(team), method: :delete, class: "btn btn-danger btn-xs btn-block" do %>
						<%= fa_icon "remove" %> Remove Team
					<% end %>
				<% end %>
				<figure>
					<%= image_tag(team.captain.profile_image_url(:normal)) if team.captain.profile_image? %>
					<figcaption>
						<h5 class="truncate" data-toggle="tooltip" title="<%= team.captain.full_name %>">Captain - <%= team.captain.full_name %></h5>
						<h5 class="truncate"><%= @tournament.team_size - team.users.count %> space remaining</h5>
						<%= link_to "Join", join_profile_team_path(team), method: :put, class: "btn btn-primary btn-xs btn-block round" %>
					</figcaption>
				</figure>
			</div>
		<% end %>
	</div>
</div>
<% if @tournament.organizer == current_user %>
	<div class="manage-tournament">
		<p class="text-center"><%= link_to profile_tournament_path(@tournament), method: :delete, class: "btn btn-danger btn-sm round" do %>
			<%= fa_icon "remove" %> Cancel Tournament
			<% end %>
		</p>
	</div>
<% end %>
</div>
