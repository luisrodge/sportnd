<div class="row">
	<div class="col-md-12">
		<h3>Sporting Venues Across Belize</h3>
	</div>
	<div class="col-md-12">
		<div class="row">
			<% Venue.all.each do |venue| %>
				<div class="col-md-4">
						<figure>
			    		<%= image_tag(venue.venue_image_url(:medium)) if venue.venue_image? %>
							<figcaption>
								<h4><%= venue.name %></h4>
								<h4><%= venue.address %></h4>
								<h5 class="gray-txt"><%= pluralize(venue.tournaments_this_week.count, "Tournament") %> This Weekend</h5>
							</figcaption>
						</figure>
				</div>
			<% end %>
		</div>
	</div>
</div>
