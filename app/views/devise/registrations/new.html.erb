<div class="row">
  <div class="col-md-8 center-block">
  <div class="box-shadow">
  <h2 class="devise-title">Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :full_name %><br />
      <%= f.text_field :full_name, autofocus: true, class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
    </div>

    <div class="form-group">
      <%= f.label :profile_image %>
      <%= f.file_field :profile_image %>
    </div>
    <br>
    <div class="form-group">
      <%= f.submit "Register", class: "btn btn-primary btn-block round" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
  </div>
</div>
